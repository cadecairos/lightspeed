{
    "manifest_version": 2,
    "name": "Lightspeed",
    "version": "0.0.1",
    "description": "Fast tab switching for Firefox",
    "homepage_url": "https://gitlab.com/cadecairos/Lightspeed",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "browser_action": {
        "browser_style": true,
        "default_title": "Lightspeed",
        "default_popup": "src/popup.html"
    },
    "background": {
        "scripts": ["src/dist/background.js"]
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Shift+P"
            }
        }
    }
}
